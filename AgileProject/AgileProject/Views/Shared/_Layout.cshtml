<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" >
            <div class="container-fluid">


                @*<div style="text-align: center; display: inline-flex; font-size:medium; ">
                    <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Index"> <img src="~/images/logo.png" style="width: 20px;" alt="logo agilidad"> Management</a>
                </div>*@

                @if (ViewBag.IsSignedIn != null)
                {

                    @if (ViewBag.IsSignedIn)
                    {


                        <a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: medium; "> 
                            <img src="~/images/logo.png" alt="" width="20" class="d-inline-block align-text-top">
                            Management
                        </a>

                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="navbar-nav">

                                @*<li class="nav-item"><a class="nav-link" name="apps" href="/Home/Index">Apps</a></li>*@
                                @*<li class="nav-item"><a class="nav-link" name="profile" href="/User/EditUser">Profile</a></li>*@
                                @*<li class="nav-item"><a class="nav-link" name="organization" href="/User/EditOrganization">Teamwork</a></li>*@
                                @*<li class="nav-item"><a class="nav-link" name="secureZone" href="/SecureZone/Index">Secure Zone</a></li>*@
                                @*<li class="nav-item"><a class="nav-link" name="settings" asp-controller="Settings" asp-action="Index" title="Settings">Settings</a></li>*@

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" name="apps" href="/Home/Index" id="navbarDropdownMenuLinkApps" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Apps
                                    </a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" name="profile" href="/User/EditUser" id="navbarDropdownMenuLinkProfile" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Profile
                                    </a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" name="organization" href="/User/EditOrganization" id="navbarDropdownMenuLinkOrganization" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Teamwork
                                    </a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" name="securezone" asp-controller="SecureZone" asp-action="Index" id="navbarDropdownMenuLinkSecureZone" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Secure Zone
                                    </a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" name="settings" asp-controller="Settings" asp-action="Index" id="navbarDropdownMenuLinkSettings" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Settings
                                    </a>
                                </li>


                            </ul>
                        </div>


                        <!-- Ventana modal, por defecto no visiblel -->
                        <div id="ventanaModal" class="modalMenu">
                            <div class="modal-content modalMenuContent">
                                @*<h1>Menu</h1>*@

                                <div style="text-align: -webkit-right;">
                                    <h2>Menu</h2>
                                    <hr />
