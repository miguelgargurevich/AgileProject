                            </div>
                        </div>

                        <button id="abrirModal" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                    }

                }


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="margin-left:20px;">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="display:none;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item" style="display:none;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>

            </div>

            <div class="navbar-toggler" style="border:0px; " data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" aria-label="Toggle navigation">
                <partial name="_LoginPartial" />
